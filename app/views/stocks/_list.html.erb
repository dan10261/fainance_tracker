<div >
	<table class="table table-stripped">
		<thead>
			<tr>
				<th>Name</th>
				<th>Ticker</th>
				<th>Last Price</th>
				<% if @user && @user.id == current_user.id %><th>Actions</th><% end %>
			</tr>
		</thead>
		<tbody>
			<% @user_stocks.each do |user_stock|%>
				<tr>
					<td><%= user_stock.stock.name%></td>
					<td><%= user_stock.stock.ticker%></td>
					<td><%= user_stock.stock.last_price%></td>
					<% if @user && @user.id == current_user.id %>							
						<td>						
							<%= link_to "delete", user_stock_path(user_stock), method: :delete, class: 'btn btn-xs btn-danger'%>
						</td>						
					<% end %>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>